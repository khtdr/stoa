{
        "compilerOptions": {
                "allowJs": true,
                "allowSyntheticDefaultImports": true,
                "esModuleInterop": true,
                "experimentalDecorators": true,
                "forceConsistentCasingInFileNames": true,
                "isolatedModules": true,
                "module": "esnext",
                "moduleResolution": "node",
                "noEmit": true,
                "resolveJsonModule": true,
                "skipLibCheck": true,
                "strict": true,
                "target": "es6",
                "baseUrl": ".",
                "paths": {
                        "*": [
                                "node_modules/*",
                                "src/*",
                                "lib/*"
                        ]
                },
        },
        "include": [
                "src",
                "lib"
        ]
}