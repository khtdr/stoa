{
        "compilerOptions": {
                "allowJs": false,
                "allowSyntheticDefaultImports": true,
                "esModuleInterop": true,
                "experimentalDecorators": true,
                "forceConsistentCasingInFileNames": true,
                "isolatedModules": true,
                "module": "esnext",
                "moduleResolution": "node",
                "noEmit": true,
                "resolveJsonModule": true,
                "skipLibCheck": true,
                "strict": true,
                "target": "es6",
                "baseUrl": ".",
                "paths": {
                        "*": [
                                "lib/*",
                                "node_modules/*"
                        ]
                },
        }
}
